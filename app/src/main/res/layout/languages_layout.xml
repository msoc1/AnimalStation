<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/liscie"
    android:baselineAligned="false"
    tools:context=".activities.LanguagesView">


    <GridView
        android:id="@+id/gridViewLanguages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="32dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </GridView>


    <ImageView
        android:id="@+id/back_to_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/back_to_main"
        app:layout_constraintBottom_toTopOf="@+id/falg2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gridViewLanguages"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/falg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="203dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/back_to_main"
        app:layout_constraintStart_toStartOf="@+id/back_to_main"
        app:layout_constraintTop_toBottomOf="@+id/back_to_main" />

    <ProgressBar
        android:id="@+id/languageProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="196dp"
        android:layout_height="164dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/load_text_view"
        style="@style/ranking_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/languageProgressBar"
        app:layout_constraintStart_toStartOf="@+id/languageProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/languageProgressBar" />


</androidx.constraintlayout.widget.ConstraintLayout>