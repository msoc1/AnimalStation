<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fixed4fun.android.animalstation">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.fixed4fun.android.animalstation.activities.StartActivity"
            android:label="Animal Station"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.fixed4fun.android.animalstation.activities.MainActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name="com.fixed4fun.android.animalstation.activities.ChosenAnimal"
            android:label="chosen animal"
            android:screenOrientation="landscape">

        </activity>

        <activity
            android:name="com.fixed4fun.android.animalstation.activities.ChosenAnimalsView"
            android:label="view for chosen animals"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name="com.fixed4fun.android.animalstation.quizActivities.NameQuiz"
            android:label="view for chosen animals"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name="com.fixed4fun.android.animalstation.quizActivities.SoundQuiz"
            android:label="view for chosen animals"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name="com.fixed4fun.android.animalstation.quizActivities.IconQuiz"
            android:label="view for chosen animals"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name="com.fixed4fun.android.animalstation.quizActivities.FootPrintQuiz"
            android:label="view for chosen animals"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name="com.fixed4fun.android.animalstation.activities.LanguagesView"
            android:label="view for chosen animals"
            android:screenOrientation="landscape">

        </activity>
        <activity android:name="com.fixed4fun.android.animalstation.activities.RegisterActivity"
            android:screenOrientation="landscape"/>

        <activity android:name="com.fixed4fun.android.animalstation.activities.RankingActivity"
            android:screenOrientation="landscape"/>

        <activity android:name="com.fixed4fun.android.animalstation.quizActivities.SpecialQuiz"
            android:screenOrientation="landscape"/>
        <activity android:name=".activities.YourScoreActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>